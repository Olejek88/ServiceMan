<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewAvatar"
            android:src="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAvatar"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:ellipsize="end"
            android:id="@+id/answerText"/>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:numColumns="3"
            android:id="@+id/answerPhotoGrid"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue_500"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/answerDate"/>

<!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerAuthor"/>
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="false"
            android:focusable="false"
            android:orientation="horizontal"
            android:paddingEnd="0dp"
            android:paddingStart="0dp">

            <ImageView
                android:id="@+id/answerRatePlusThumb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/baseline_thumb_up_alt_black_24dp" />

            <TextView
                android:id="@+id/answerRatePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/default_rate_plus" />

            <ImageView
                android:id="@+id/answerRateMinusThumb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:src="@drawable/baseline_thumb_down_alt_black_24dp" />

            <TextView
                android:id="@+id/answerRateMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/default_rate_minus" />

            <ImageView
                android:id="@+id/answerRate1"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_star_black_24dp" />

            <ImageView
                android:id="@+id/answerRate2"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_star_black_24dp" />

            <ImageView
                android:id="@+id/answerRate3"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_star_black_24dp" />

            <ImageView
                android:id="@+id/answerRate4"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_star_half_black_24dp" />

            <ImageView
                android:id="@+id/answerRate5"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:paddingTop="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_star_border_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>