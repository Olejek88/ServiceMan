<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeHeaderLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:src="@drawable/user_no_image" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/mdtp_white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_toEndOf="@id/profile_image"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/mdtp_white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/profile_stats"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_toEndOf="@id/profile_status"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/mdtp_white" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/star1"
        android:layout_below="@id/profile_status"
        android:layout_toEndOf="@id/profile_image"
        android:src="@drawable/baseline_star_black_24dp"
        android:contentDescription="@string/app_name" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/star2"
        android:layout_below="@id/profile_status"
        android:layout_toEndOf="@id/star1"
        android:src="@drawable/baseline_star_black_24dp"
        android:contentDescription="@string/app_name" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/star3"
        android:layout_below="@id/profile_status"
        android:layout_toEndOf="@id/star2"
        android:src="@drawable/baseline_star_black_24dp"
        android:contentDescription="@string/app_name" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/star4"
        android:layout_below="@id/profile_status"
        android:layout_toEndOf="@id/star3"
        android:src="@drawable/baseline_star_border_black_24dp"
        android:contentDescription="@string/app_name" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="5dp"
        android:id="@+id/star5"
        android:layout_below="@id/profile_status"
        android:layout_toEndOf="@id/star4"
        android:src="@drawable/baseline_star_border_black_24dp"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
